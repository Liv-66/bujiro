<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">{{category}}</h5>
        <h6 class="card-subtitle text-muted">總額 ${{total}}</h6>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">支出名稱</th>
                <th scope="col">類別</th>
                <th scope="col">店家</th>
                <th scope="col">金額</th>
                <th scope="col">日期</th>
                <th scope="col">編輯</th>
            </tr>
        </thead>
        <tbody>
            {{#each records}}
            <tr class="table-light">
                <th scope="row">{{this.name}}</th>
                <td>{{this.category}}</td>
                <td>{{this.merchant}}</td>
                <td>{{this.amount}}</td>
                <td>{{this.date}}</td>
                <td>
                    <a class="btn btn-success" href="/update/{{ this.id }}">edit</a>
                    <form action="/{{ this.id }}?_method=DELETE" method="POST" style="display: inline">
                        <button class="btn btn-danger" type="submit">delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>